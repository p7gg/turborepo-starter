{
	// These tasks will run in order when initializing your CodeSandbox project.
	"setupTasks": [
		{
			"name": "Install Dependencies",
			"command": "pnpm install"
		}
	],

	// These tasks can be run from CodeSandbox. Running one will open a log in the app.
	"tasks": {
		"dev:core": {
			"name": "dev:core",
			"command": "pnpm dev:core",
			"runAtStart": true
		},
		"dev:docs": {
			"name": "dev:docs",
			"command": "pnpm dev:docs",
			"runAtStart": false
		},
		"build:core": {
			"name": "build:core",
			"command": "pnpm build:core",
			"runAtStart": false
		},
		"build:docs": {
			"name": "build:docs",
			"command": "pnpm build:docs",
			"runAtStart": false
		},
		"type-check": {
			"name": "type-check",
			"command": "pnpm type-check",
			"runAtStart": false
		},
		"lint": {
			"name": "lint",
			"command": "pnpm lint",
			"runAtStart": false
		},
		"lint:fix": {
			"name": "lint:fix",
			"command": "pnpm lint:fix",
			"runAtStart": false
		},
		"format": {
			"name": "format",
			"command": "pnpm format",
			"runAtStart": false
		},
		"format:write": {
			"name": "format:write",
			"command": "pnpm format:write",
			"runAtStart": false
		},
		"clean": {
			"name": "clean",
			"command": "pnpm clean",
			"runAtStart": false
		},
		"plop": {
			"name": "plop",
			"command": "pnpm plop",
			"runAtStart": false
		},
		"update-deps": {
			"name": "update-deps",
			"command": "pnpm update-deps",
			"runAtStart": false
		}
	}
}
